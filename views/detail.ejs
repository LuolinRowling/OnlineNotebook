<%- include header %>
	<div class="text-center page-title"><%= title %></div>
	<div class="container">
		<div class="row">
			<div class="col-xs-8 col-xs-offset-2">
				<div class="article-box">
					<a href="/" style="text-align: center; display: inline-block; width: 100%">返回笔记列表</a>
					<h1 class="text-center"><%= art.title %></h1>
					<p class="text-center">
						<span class="label label-info"><%= art.tag %></span>
						<span class="create-time">
							<span class="text-bold">时间：</span>
							<%= moment(art.createTime).locale('zh-cn').format('LL HH:mm:ss') %>
						</span>
					</p>
					<p><%= art.content %></p>
				</div>
			</div>
		</div>
	</div>
<%- include footer %>